#!/usr/bin/env bash

set -e

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

# rm_generated.sh

# video_to_images.sh

# currently disable blurry detection, since it does not seem to affect a lot
#python opensfm/car/blurry_detection.py $1 \
#        --threshold=100.0
python opensfm/car/generate_mask.py $1 \
        --image_height=720 \
        --hood_height=150 \
        --seg_relative_path="output/results/joint"

$DIR/opensfm extract_metadata $1
$DIR/opensfm detect_features $1

# same frame detection & removal
python opensfm/car/remove_stopping_frames.py $1 \
        --homography_ransac_threshold=0.004 \
        --homography_inlier_ratio=0.95 \
        --matching_mod="cached_ransac"

$DIR/opensfm match_features $1
$DIR/opensfm create_tracks $1
$DIR/opensfm reconstruct $1
$DIR/opensfm mesh $1

# the unused scripts in car
# match_homography.py
# static_removal.py
